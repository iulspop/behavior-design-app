{
  "compilerOptions": {
    "strict": true,
    "outDir": "bin",
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "pretty": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "experimentalDecorators": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["client/**/*.ts"]
}

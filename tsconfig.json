{
  "compilerOptions": {
    "outDir": "bin",
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "pretty": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["cli/*"]
    }
  },
  "include": ["cli/**/*.ts"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
